{
    "name": "Download Processor",

    "description": "Auto process downloads when they are finished.",

    "version": "1.0",

    "browser_action": {
        "browser_style": true,
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },

    "icons": {
        "16": "icon.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "background": {
        "scripts": ["background.js"]
    },

    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },

    "permissions": [
        "nativeMessaging",
        "tabs",
        "<all_urls>",
        "webRequest",
        "webRequestBlocking",
        "storage"
    ],

    "manifest_version": 2,
    
    "applications": {
        "gecko": {
            "id": "{83f45a49-5a80-9c4c-8729-d13b826b2210}"
        }
    }
}
