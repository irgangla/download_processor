{
    "name": "Download Processor",

    "description": "Auto process downloads when they are finished.",

    "version": "1.0",

    "browser_action": {
        "browser_style": true,
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },

    "icons": {
        "16": "icon.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "background": {
        "scripts": ["background.js"]
    },

    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },

    "permissions": [
        "nativeMessaging",
        "tabs",
        "<all_urls>",
        "webRequest",
        "webRequestBlocking",
        "storage"
    ],

    "manifest_version": 2,

    "applications": {
        "gecko": {
            "id": "{bff638ba-59df-4985-af17-982ef7cf0a53}"
        }
    }
}
